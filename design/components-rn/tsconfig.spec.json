{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "jsx": "react",
    "types": [
      "jest",
      "@testing-library/jest-native",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "src/*.stories.ts",
    "src/*.stories.js",
    "src/*.stories.jsx",
    "src/*.stories.tsx",
    "jest.config.js",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ]
}
