{
  "private": true,
  "engines": {
    "node": ">=14",
    "pnpm": ">=6"
  },
  "scripts": {
    "prepare": "husky install",
    "prepare:unix": "chmod +x ./node_modules/husky/lib/bin.js && husky install",
    "publish:prettier": "pnpm publish --filter=@cloud-dragon/prettier-config --access public --registry=https://registry.npm.taobao.org"
  },
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "@cloud-dragon/eslint-config": "workspace:*",
    "@cloud-dragon/prettier-config": "workspace:*",
    "@cloud-dragon/stylelint-config-standard": "workspace:*",
    "@cloud-dragon/tsconfig-react": "workspace:^0.0.1",
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "eslint": "^8.2.0",
    "husky": "^7.0.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.5.1",
    "stylelint": "^14.2.0",
    "typescript": "4.5.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "pnpm": {
    "//": "See https://stackoverflow.com/questions/70368760/react-uncaught-referenceerror-process-is-not-defined",
    "overrides": {
      "react-error-overlay": "6.0.9"
    }
  }
}
